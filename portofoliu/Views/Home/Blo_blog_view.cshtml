@model portofoliu.Domain.Blog
<section id="main-content" class=" ">
     <section class="wrapper main-wrapper row" style=''>

          <div class='col-12'>
               <div class="page-title">

                    <div class="float-left">
                         <!-- PAGE HEADING TAG - START --><h1 class="title">@Model.Title</h1><!-- PAGE HEADING TAG - END -->
                    </div>

                    <div class="float-right d-none">
                         <ol class="breadcrumb">
                              <li>
                                   <a href="index.html"><i class="fa fa-home"></i>Home</a>
                              </li>
                              <li>
                                   <a href="blo-blogs.html">Blogs</a>
                              </li>
                              <li class="active">
                                   <strong>View Blog</strong>
                              </li>
                         </ol>
                    </div>

               </div>
          </div>
          <div class="clearfix"></div>
          <!-- MAIN CONTENT AREA STARTS -->

          <div class="col-xl-12">
               <section class="box ">
                    <div class="content-body">
                         <div class="row">
                              <div class="col-12">


                                   <!-- start -->
                                   <img src=@Url.Content(Model.Image) />
                                   <div class="blog_post full_blog_post">
                                        <div class="blog-content">
                                             <p>@Model.Content</p>
                                        </div>
                                        <h5>Written by <a> @Model.Author</a> @Model.Created_on.</h5>
                                   </div>

                                   <!-- end -->


                              </div>
                         </div>
                    </div>
               </section>
          </div>


          <!-- MAIN CONTENT AREA ENDS -->
     </section>
</section>