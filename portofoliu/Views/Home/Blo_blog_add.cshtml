@model portofoliu.Domain.Blog

@using (Html.BeginForm())
{
     @Html.AntiForgeryToken()

     <section id="main-content" class=" ">
          <section class="wrapper main-wrapper row" style=''>

               <div class='col-12'>
                    <div class="page-title">

                         <div class="float-left">
                              <!-- PAGE HEADING TAG - START --><h1 class="title">Add a Blog</h1><!-- PAGE HEADING TAG - END -->
                         </div>

                         <div class="float-right d-none">
                              <ol class="breadcrumb">
                                   <li>
                                        <a href="index.html"><i class="fa fa-home"></i>Home</a>
                                   </li>
                                   <li>
                                        <a href="blo-blogs.html">Blogs</a>
                                   </li>
                                   <li class="active">
                                        <strong>Add Blog</strong>
                                   </li>
                              </ol>
                         </div>

                    </div>
               </div>
               <div class="clearfix"></div>
               <!-- MAIN CONTENT AREA STARTS -->
               <div class="col-12">
                    <section class="box ">
                         <header class="panel_header">
                              <h2 class="title float-left">Basic Info</h2>
                              <div class="actions panel_actions float-right">
                                   <a class="box_toggle fa fa-chevron-down"></a>
                                   <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                                   <a class="box_close fa fa-times"></a>
                              </div>
                         </header>
                         <div class="content-body">
                              <div class="row">
                                   <form action="#" method="post">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
                                             <div class="form-group">
                                                  <label class="form-label" for="field-12103593288">Blog Title</label>
                                                  <span class="desc"></span>
                                                  <div class="controls">
                                                       @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                                       @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                                  </div>
                                             </div>

                                        </div>

                                        <div class="col-12">
                                             <div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
                                                  <div class="form-group">
                                                       <label class="form-label">Blog Content</label>
                                                       <span class="desc"></span>
                                                       @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                                                       @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                                                  </div>

                                                  <div class="form-group">
                                                       <label class="form-label">Created On</label>
                                                       <span class="desc">e.g. "04/03/2015"</span>
                                                       <div class="controls">
                                                            @Html.EditorFor(model => model.Created_on, new { htmlAttributes = new { @class = "form-control datepicker mm/dd/yyyy" } })
                                                            @Html.ValidationMessageFor(model => model.Created_on, "", new { @class = "text-danger" })
                                                       </div>
                                                  </div>

                                                  <div class="form-group">
                                                       <label class="form-label">Blog Tags</label>
                                                       <span class="desc"></span>
                                                       @Html.EditorFor(model => model.Tag, new { htmlAttributes = new { @class = "form-control" } })
                                                       @Html.ValidationMessageFor(model => model.Tag, "", new { @class = "text-danger" })
                                                  </div>
                                                  <div class="form-group">
                                                       <label class="form-label">Blog Categories</label>
                                                       <span class="desc"></span>
                                                       @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
                                                       @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                                                  </div>
                                                  <div class="form-group">
                                                       <label class="form-label">Blog Status</label>
                                                       <span class="desc"></span>
                                                       @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                                                       @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                                  </div>
                                                  <div class="form-group">
                                                       <label class="form-label" for="field-11032276658">Blog Author</label>
                                                       <span class="desc"></span>
                                                       <div class="controls">
                                                            @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                                                       </div>
                                                  </div>
                                             </div>


                                             <div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
                                                  <div class="text-left">
                                                       <button type="submit" class="btn btn-primary">Save</button>
                                                  </div>
                                             </div>
                                   </form>
                              </div>


                         </div>
                    </section>
               </div>



               <!-- MAIN CONTENT AREA ENDS -->
          </section>
     </section>
}
